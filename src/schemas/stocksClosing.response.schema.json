{
  "$id": "https://npz/api/v1/schemas/stocksClosing.response.schema.json",
  "type": "object",
  "required": ["plant_id", "report_date", "rows"],
  "properties": {
    "plant_id": { "type": "string" },
    "report_date": { "type": "string", "pattern": "^\\d{4}-\\d{2}-\\d{2}$" },
    "rows": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["row_no", "product_code", "product_name", "stock_closing_qty", "uom"],
        "properties": {
          "row_no": { "type": "integer" },
          "supplier_name": { "type": ["string","null"] },
          "product_code": { "type": "string" },
          "product_name": { "type": "string" },
          "stock_closing_qty": { "type": "number", "minimum": 0 },
          "uom": { "type": "string", "enum": ["t"] }
        }
      }
    },
    "pagination": {
      "type": "object",
      "properties": {
        "limit": { "type": "integer", "minimum": 1 },
        "offset": { "type": "integer", "minimum": 0 },
        "total": { "type": "integer", "minimum": 0 },
        "has_more": { "type": "boolean" }
      },
      "required": ["limit", "offset"]
    }
  }
}
