{
  "$id": "https://npz/api/v1/schemas/unitsUtilization.request.schema.json",
  "type": "object",
  "required": ["plant_id", "report_date", "rows"],
  "properties": {
    "plant_id": { "type": "string", "minLength": 1, "maxLength": 16 },
    "report_date": { "type": "string", "pattern": "^\\d{4}-\\d{2}-\\d{2}$" },
    "rows": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["unit_name","design_capacity","status"],
        "properties": {
          "unit_name": { "type": "string", "minLength": 1 },
          "design_capacity": { "type": "number", "minimum": 0 },
          "achieved_capacity_max": { "type": ["number","null"], "minimum": 0 },
          "achieved_capacity_min": { "type": ["number","null"], "minimum": 0 },
          "spiral_load": { "type": ["number","null"], "minimum": 0 },
          "productivity": { "type": ["number","null"], "minimum": 0 },
          "productivity_pct": { "type": ["number","null"], "minimum": 0 },
          "status": { "type": "string", "enum": ["in_operation","idle","maintenance","down","standby", "в работе"] }
        },
        "additionalProperties": false
      }
    }
  },
  "additionalProperties": false
}
