{
  "$id": "https://npz/api/v1/schemas/crudeSupply.request.schema.json",
  "type": "object",
  "required": ["plant_id", "report_date", "rows"],
  "properties": {
    "plant_id": { "type": "string", "minLength": 1, "maxLength": 16 },
    "report_date": { "type": "string", "pattern": "^\\d{4}-\\d{2}-\\d{2}$" },
    "rows": {
      "type": "array",
      "minItems": 0,
      "items": {
        "type": "object",
        "required": [
          "producer_name","supplier_name",
          "supply_plan_month","supply_plan_to_date","supply_actual_daily","supply_actual_to_date",
          "confirmed_crude_volume","mne_approved_schedule","plan_primary","plan_total"
        ],
        "properties": {
          "producer_name": { "type": "string", "minLength": 1 },
          "supplier_name": { "type": "string", "minLength": 1 },
          "supply_plan_month": { "type": "number", "minimum": 0 },
          "supply_plan_to_date": { "type": "number", "minimum": 0 },
          "supply_actual_daily": { "type": "number", "minimum": 0 },
          "supply_actual_to_date": { "type": "number", "minimum": 0 },
          "confirmed_crude_volume": { "type": "number", "minimum": 0 },
          "mne_approved_schedule": { "type": "number", "minimum": 0 },
          "plan_primary": { "type": "number", "minimum": 0 },
          "plan_additional": { "type": ["number","null"], "minimum": 0 },
          "plan_total": { "type": "number", "minimum": 0 },
          "note": { "type": ["string","null"] }
        }
      }
    }
  },
  "additionalProperties": false
}
